<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>
<% if @is_current %>
  <%= button_to "Create New Pokemon", "/pokemons/new", :class => 'button medium', :method => :get %>
<% end %>
<tr>
<% @pokemons.each do |pokemon| %>
  <td>
    <% if pokemon.ndex %>
    <p>
      <%= image_tag("pokemon/#{pokemon.ndex}.png", alt: "pokemon") %>
      Name: <%= pokemon.name %>,
      Health: <%= pokemon.health %>
      <%= button_to "Attack!", attack_path(id: pokemon.id), :class => 'button medium', :method => :patch %>
      </p>
    <% end %>


  </td>
<% end %>
</tr>
